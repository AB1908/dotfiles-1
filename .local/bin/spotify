#!/bin/sh
#
# Spotify wrapper. Features:
# - Start with a WM_CLASS. Based on https://github.com/dasJ/spotifywm.
# - Only allow one instance.
#
# Author: Rafael Cavalcanti - rafaelc.org

if wmctrl -xl | grep -q spotify.Spotify; then
  printf "Spotify is already running.\n"
  exit 1
fi

LD_PRELOAD=/usr/lib/libcurl.so.3:$HOME/.local/opt/spotifywm/spotifywm.so exec /usr/bin/spotify
