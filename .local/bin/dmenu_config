#!/usr/bin/env bash
#
# dmenu script for ssh'ing and vnc'ing (pass --vnc)
# Dependencies: my vnc script
#
# Author: Rafael Cavalcanti - rafaelc.org

readonly configs=(
  "alacritty"
  "aliases"
  "bashrc"
  "dunstrc"
  "dwm"
  "mpv/mpv"
  "mpv/input"
  "profile"
  "ranger/rc"
  "ranger/rifle"
  "vimrc"
  "xprofile"
  "zshrc"
)

readonly config=$(printf '%s\n' "${configs[@]}" | dmenu -p "configs" "$@")

case $config in
  alacritty) $TERMINAL -e $EDITOR ~/.config/alacritty/alacritty.yml ;;
  aliases) $TERMINAL -e $EDITOR ~/.config/aliases ;;
  bashrc) $TERMINAL -e $EDITOR ~/.bashrc ;;
  dunstrc) $TERMINAL -e $EDITOR ~/.config/wal/templates/dunstrc ;;
  dwm) $TERMINAL --working-directory ~/Code/dwm -e zsh -c "$EDITOR ~/Code/dwm/config.h; exec zsh" ;;
  mpv/mpv) $TERMINAL -e $EDITOR ~/.config/mpv/mpv.conf ;;
  mpv/input) $TERMINAL -e $EDITOR ~/.config/mpv/input.conf ;;
  profile) $TERMINAL -e $EDITOR ~/.profile ;;
  ranger/rc) $TERMINAL -e $EDITOR ~/.config/ranger/rc.conf ;;
  ranger/rifle) $TERMINAL -e $EDITOR ~/.config/ranger/rifle.conf ;;
  vimrc) $TERMINAL -e $EDITOR ~/.vimrc ;;
  xprofile) $TERMINAL -e $EDITOR ~/.xprofile ;;
  zshrc) $TERMINAL -e $EDITOR ~/.config/zsh/.zshrc ;;
esac
