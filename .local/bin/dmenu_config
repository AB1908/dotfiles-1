#!/usr/bin/env bash
#
# dmenu script for ssh'ing and vnc'ing (pass --vnc)
# Dependencies: my vnc script
#
# Author: Rafael Cavalcanti - rafaelc.org

readonly terminal_run="$TERMINAL -e"
readonly editor="$EDITOR"

readonly configs=(
  "alacritty"
  "aliases"
  "bashrc"
  "dunstrc"
  "dwm"
  "mpv/mpv"
  "mpv/input"
  "profile"
  "ranger/rc"
  "ranger/rifle"
  "vimrc"
  "xprofile"
  "zshrc"
)

readonly config=$(printf '%s\n' "${configs[@]}" | dmenu -p "configs" "$@")

case $config in
  alacritty) $terminal_run $editor ~/.config/alacritty/alacritty.yml ;;
  aliases) $terminal_run $editor ~/.config/aliases ;;
  bashrc) $terminal_run $editor ~/.bashrc ;;
  dunstrc) $terminal_run $editor ~/.config/wal/templates/dunstrc ;;
  dwm) $terminal_run zsh -c "$editor ~/Code/dwm/config.h; exec zsh" ;;
  mpv/mpv) $terminal_run $editor ~/.config/mpv/mpv.conf ;;
  mpv/input) $terminal_run $editor ~/.config/mpv/input.conf ;;
  profile) $terminal_run $editor ~/.profile ;;
  ranger/rc) $terminal_run $editor ~/.config/ranger/rc.conf ;;
  ranger/rifle) $terminal_run $editor ~/.config/ranger/rifle.conf ;;
  vimrc) $terminal_run $editor ~/.vimrc ;;
  xprofile) $terminal_run $editor ~/.xprofile ;;
  zshrc) $terminal_run $editor ~/.config/zsh/.zshrc ;;
esac
