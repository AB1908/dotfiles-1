#!/bin/bash
#
# Send files to phone.
# It's a wrapper around KDE Connect CLI to provide
# a bit more functionality.
#
# Copyright (C) 2019-2021 Rafael Cavalcanti - rafaelc.org
# Licensed under GPLv3

readonly script_name="$(basename "$0")"

if (( $# == 0 )); then
	printf "Usage: %s file [file...]\n" "$script_name"
	exit 1
fi

readonly phone_id="$(kdeconnect-cli -l --id-only | head -1)"

while (( $# > 0 )); do
	if kdeconnect-cli --device "$phone_id" --share "$1"; then
		msg="File sent - $(basename -- "$1")"
	else
		msg="Failed to send the file."
	fi
	notify-send -a "send2phone" "$msg"
	shift
done
