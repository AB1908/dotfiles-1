#!/bin/bash
#
# Conveniently provide youtube-dl options. Used on Termux.
#
# Copyright (C) 2019-2020 Rafael Cavalcanti - rafaelc.org
# Licensed under GPLv3

set -euo pipefail

if [[ $# -eq 0 ]]; then
  printf "We need at least a url.\n"
  exit 1
fi

printf "Select format:\n" >&2

select option in "Default" "Audio"; do
  case $option in
    "Default") youtube-dl "$@"; break ;;
    "Audio") youtube-dl --extract-audio "$@"; break ;;
    *) printf "Invalid option.\n" >&2 ;;
  esac
done

