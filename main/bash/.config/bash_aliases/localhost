#
# Bash aliases for Termux
#
# Autor: Rafael Cavalcanti


# Source common aliases
. ~/.config/bash_aliases/base

# Fix aliases that don't work on Busybox
alias rm="rm -v"
alias ln="ln -v"
alias free="free -m"
unalias grep

# Replace ssh with ssha wrapper, so we use ssh-agent
alias ssh="ssha"

# Browsing
alias gd="cd /sdcard/Download"
alias gx="cd /sdcard"
alias gr="cd $PREFIX"

# Update
alias update="pkg update \
	&& apt autoremove \
	&& pip freeze | awk 'BEGIN{FS=\"==\"}{print $1}' | xargs pip install --upgrade \
	&& git -C ~/.dotfiles pull \
	&& git -C ~/.local/opt/scripts pull \
	&& vim +PlugUpgrade +PlugUpdate +PlugClean +qa!"

# Turn off TV via Pi
alias td="ssh pi.lan -t bash -ic td"

