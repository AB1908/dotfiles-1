#
# Default aliases
#
# Autor: Rafael Cavalcanti

# Source common aliases
. ~/.config/bash_aliases/base

# Package managers
## Manjaro's Pamac
if [ -e /usr/bin/pamac ]; then
		alias update="pamac update \
		&& git -C ~/.dotfiles pull \
		&& vim +PlugUpgrade +PlugUpdate +PlugClean +qa!"

		[ -e /usr/bin/pacman-mirrors ] && alias pm="sudo pacman-mirrors -f 10"

## Arch's Pacman
elif [ -e /usr/bin/pacman ]; then
	alias update="sudo pacman -Syu && trizen -Syu --aur --devel --needed \
		&& git -C ~/.dotfiles pull \
		&& vim +PlugUpgrade +PlugUpdate +PlugClean +qa!"

	[ -e /usr/bin/reflector ] && alias pm="sudo reflector -l 5 --sort rate \
		--save /etc/pacman.d/mirrorlist && echo 'OK.' && sudo pacman -Syy"

## Apt
elif [ -e /usr/bin/apt ]; then
	alias update="sudo apt update && sudo apt full-upgrade && sudo apt clean \
		&& sudo apt autoremove \
		&& git -C ~/.dotfiles pull \
		&& vim +PlugUpgrade +PlugUpdate +qa"
fi

