# Modi
rofi.combi-modi: window,drun,virtualbox:~/.local/opt/scripts/i3/rofi/vbox.sh
rofi.display-combi: arch
rofi.modi: combi,run,ssh,vnc:~/.local/opt/scripts/i3/rofi/vnc.sh,virtualbox:~/.local/opt/scripts/i3/rofi/vbox.sh

# SSH modi
rofi.parse-known-hosts: false

# Window modi
rofi.window-format: {i} {t}

# Apperance
rofi.m: HDMI-1
rofi.theme: Adapta-Nokto
rofi.font: SFNS Display 11
rofi.width: 20
rofi.lines: 20
rofi.columns: 1
rofi.show-icons: false
#rofi.sidebar-mode: true

# Shortcuts
rofi.kb-cancel: Super+d,Escape
# unset "Tab"
rofi.kb-row-tab:
# unset "Shift+Tab"
rofi.kb-row-up:
# Note: Shift+Tab = ISO_Left_Tab
rofi.kb-mode-previous: ISO_Left_Tab
rofi.kb-mode-next: Tab
rofi.kb-move-word-back: Control+Left
rofi.kb-move-word-forward: Control+Right

# Mouse
# unset "MousePrimary"
rofi.me-select-entry:
rofi.me-accept-entry: MousePrimary

