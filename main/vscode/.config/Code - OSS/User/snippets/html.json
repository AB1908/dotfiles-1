		"prefix": "html",
		"body": [
			"<!DOCTYPE html>",
			"<html>",
			"<head>",
			"\t<meta charset=\"utf-8\">",
			"\t<title>$1</title>",
			"\t<meta name=\"viewport\" content=\"width=device-width, user-scalable=no\">",
			"\t<link rel=\"stylesheet\" href=\"$2\">",
			"</head>",
			"<body>",
			"\t$0",
			"\t<script src=\"$3\"></script>",
			"</body>",
			"</html>"
