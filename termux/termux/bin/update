#!/data/data/com.termux/files/usr/bin/bash
#
# Comandos de atualização para meu Termux.
#
# Rafael Cavalcanti

n=4

printf "[1/%s] Atualizando pacotes do APT...\n" $n
pkg update

printf "\n\n[2/%s] Atualizando pacotes do PIP...\n"  $n
pip freeze | awk 'BEGIN{FS="=="}{print $1}' | xargs pip install --upgrade

printf "\n\n[3/%s] Atualizando plugins do VIM...\n"  $n
vim +PlugUpgrade +PlugUpdate +qa!

printf "\n\n[4/%s] Atualizando dotfiles...\n"  $n
git -C ~/.dotfiles pull
