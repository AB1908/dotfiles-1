#
# Pi aliases
#
# Author: Rafael Cavalcanti


# Source common aliases
. $ALIASES_DIR/base

# Services
if systemctl status kodi > /dev/null 2>&1; then
	alias kr="sudo systemctl restart kodi"
	alias ks="sudo systemctl stop kodi"
fi

# TV and HDMI output
alias td='echo "standby 0" | cec-client -s'
alias tl='echo "on 0" | cec-client -s'

# Browsing
alias zs="cd /srv"
[ -d /srv/filedrop ] && alias zd="cd /srv/filedrop"
[ -d /net/airport/data/Downloads ] && alias zD="cd /net/airport/data/Downloads"
[ -d "$HOME/.kodi" ] && alias zk="cd $HOME/.kodi"
[ -d /var/lib/kodi/.kodi ] && alias zk="cd /var/lib/kodi/.kodi"

