# We need PATH, MPD_HOST
source ~/.profile

printf "What should I do?\n" >&2
select option in "Download" "Play on MPD" "Exit"; do
  case $option in
    "Download")
      cd /sdcard/Download
      bash ytd "$@"
      exit_code=$?

      break
      ;;
    "Play on MPD")
      bash myt "$@"
      exit_code=$?

      break
      ;;
    "Exit")
      exit
      ;;
    *)
      printf "Invalid option.\n" 1>&2;;
  esac
done

if [[ $exit_code -ne 0 ]]; then
  printf "\nPress any key to exit."
  read
fi

