# We need PATH, MPD_HOST
source ~/.zprofile

main() {
  select_action "$@"
}

select_action() {
  printf "What should I do?\n" >&2

  select option in "Download video" "Download audio" "Play on MPD"; do
    case $option in
      "Download video")
        cd /sdcard/Download || cd
        youtube-dl "$@" || hold
        break
        ;;
      "Download audio")
        cd /sdcard/Download || cd
        youtube-dl --extract-audio "$@" || hold
        break
        ;;
      "Play on MPD")
        bash myt "$@" || hold
        break
        ;;
      *)
        printf "Invalid option.\n" 1>&2 ;;
    esac
  done
}

hold() {
  printf "\nPress any key to exit."
  read
}

main "$@"
