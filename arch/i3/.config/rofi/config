# Modi
rofi.combi-modi: window,drun,ssh,vnc:~/.config/rofi/vnc.sh,vbox:~/.config/rofi/vbox.sh,run
rofi.display-combi:
rofi.modi: combi,run,ssh,vnc:~/.config/rofi/vnc.sh,vbox:~/.config/rofi/vbox.sh

# SSH modi
rofi.parse-known-hosts: false

# Apperance
rofi.theme: solarized_alternate
rofi.font: SFNS Display 12
rofi.width: 25
rofi.lines: 20
rofi.show-icons: true
rofi.sidebar-mode: true

# Shortcuts
rofi.kb-cancel: Alt+F1,Escape
# unset "Tab" shortcut
rofi.kb-row-tab:
rofi.kb-mode-previous: Shift+Tab,Control+Shift+Tab
rofi.kb-mode-next: Tab,Control+Tab
rofi.kb-move-word-back: Control+Left
rofi.kb-move-word-forward: Control+Right

# Misc
rofi.lazy-grab: false
