# Modi
rofi.combi-modi: window,drun,virtualbox:~/.config/rofi/vbox.sh
rofi.display-combi: costanza
rofi.modi: combi,run,ssh,vnc:~/.config/rofi/vnc.sh,virtualbox:~/.config/rofi/vbox.sh

# SSH modi
rofi.parse-known-hosts: false

# Window modi
rofi.window-format: {i} {t}

# Apperance
rofi.theme: android_notification
rofi.font: SFNS Display 11
rofi.width: 20
rofi.lines: 20
rofi.columns: 1
rofi.show-icons: true
#rofi.sidebar-mode: true

# Shortcuts
rofi.kb-cancel: Super+d,Escape
# unset "Tab"
rofi.kb-row-tab:
rofi.kb-mode-previous: Shift+Tab,Control+Shift+Tab
rofi.kb-mode-next: Tab,Control+Tab
rofi.kb-move-word-back: Control+Left
rofi.kb-move-word-forward: Control+Right

# Mouse
# unset "MousePrimary"
rofi.me-select-entry:
