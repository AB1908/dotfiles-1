[module/playerctl]
type = custom/script
exec = ~/.config/polybar/playerctl.sh
exec-if = playerctl status
;exec-if = pidof -x spotify &> /dev/null
interval = 0.5
click-left = i3-msg workspace "9: ÔÄÅ"
click-middle = playerctl play-pause
click-right = playerctl next
label-maxlen = 40
format-padding = 4
format-background = ${colors.orange5}

