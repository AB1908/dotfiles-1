click-right = cmus-remote --next


[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = bluez_sink.FC_58_FA_C4_8E_15.a2dp_sink

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points) (unreleased)
; Default: 5
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume>  <label-volume>
format-volume-background = ${colors.orange4}
format-volume-padding = 4

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
label-volume = %{A2:sh -c 'pavucontrol &':}%percentage%%%{A}%{A}

; Available tokens:
;   %percentage% (default)
label-muted = %{A2:sh -c 'pavucontrol &':}üîá muted%{A}%{A}
label-muted-foreground = #666

; Only applies if <ramp-volume> is used
ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄ®


