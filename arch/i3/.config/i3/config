set $encfs_wrap ~/.config/i3/encfs.sh
set $rofi_wrap ~/.config/i3/rofi.sh
set $flash_win ~/.config/i3/flash_win.sh

# Default gaps
set $gaps_inner 20
set $gaps_outer 5

# Workspaces
